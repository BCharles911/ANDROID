<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imgPoster"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ikonica2_neprovidna" />

    <TextView
        android:id="@+id/tvPostDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="102dp"
        android:text="2018-07-19" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgPoster"
        android:layout_toRightOf="@id/imgPoster"
        android:text="Post title"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvPopularity"
        android:paddingTop="20dp"
        android:text=" usdai i dolor sit amet spet epi absinht  dolos lispi us ia usdai i dolor sit amet spet epi absinht "
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tvPopularity"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="+7"
        android:textSize="14dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/buttonLike"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/tvDescription"
        android:layout_toStartOf="@+id/buttonDislike"
        android:background="@drawable/like" />


    <ImageButton
        android:id="@+id/buttonDislike"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/tvDescription"
        android:layout_alignParentEnd="true"
        android:background="@drawable/dislike" />

</RelativeLayout>